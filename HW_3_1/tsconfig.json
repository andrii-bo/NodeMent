{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "target": "es2017",
        "outDir": "dist",
        "baseUrl": "src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true, 
    },
    "include": [
        "src/*.ts",
        "test/*.ts",        
    ],
    "exclude": [
        "node_modules"
    ]
}